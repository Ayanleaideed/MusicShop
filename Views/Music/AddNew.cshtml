@model MusicShop.Models.BrowseMusicViewModel

@{
    ViewData["Title"] = "AddNew";
}

<h1>Add New Song</h1>

<form asp-action="AddNew" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NewSong.Title" class="control-label"></label>
        <input asp-for="NewSong.Title" class="form-control" />
        <span asp-validation-for="NewSong.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewSong.Genre" class="control-label"></label>
        <input asp-for="NewSong.Genre" class="form-control" />
        <span asp-validation-for="NewSong.Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewSong.Performer" class="control-label"></label>
        <input asp-for="NewSong.Performer" class="form-control" />
        <span asp-validation-for="NewSong.Performer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <br />
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <br />
    <a asp-action="BrowseMusic" class="btn btn-primary">Back to List</a>
    <br />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
