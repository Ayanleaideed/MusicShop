@{
    ViewData["Title"] = "Music Shop Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            background-color: #007bff;
            color: #ffffff;
        }

        .card-title {
            font-family: 'Arial', sans-serif;
        }

        .scribble {
            animation: scribble 0.1s infinite alternate-reverse;
        }


        .scribble {
            animation: scribble 0.1s infinite alternate-reverse;
        }


        .scribble {
            animation: scribble 0.1s infinite alternate-reverse;
        }


    </style>
</head>
<body>

    <div class="container mt-5">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://blog.urbansurf.me/wp-content/uploads/2019/09/Tomorrowland.jpg" class="d-block w-100" alt="Tomorrowland">
                </div>
                <div class="carousel-item">
                    <img src="https://www.billboard.com/wp-content/uploads/2022/07/12-tomorrowland-2022-billboard-1548.jpg" class="d-block w-100" alt="Festival 1">
                </div>
                <div class="carousel-item">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/6/6d/Tomorrowland_2018_mainstage.jpg" class="d-block w-100" alt="Festival 2">
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="card text-center mt-4">
            <div class="card-body">
                <h1 class="card-title display-4 scribble">Welcome to the Music Shop</h1>
                <p class="card-text lead mt-4">Explore a world of music and find your favorite tunes at the Music Shop.</p>
                <p class="card-text">Learn more about <a href="https://docs.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.</p>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js (if needed) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
